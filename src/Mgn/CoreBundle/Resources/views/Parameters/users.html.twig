                    </div>

                </fieldset>

            </div>

            <footer class="panel-footer">

                <div class="row">

                    <div class="col-md-9 col-md-offset-3">

                        {{ form_widget(form.save, {'label': 'Mettre à jour', 'attr': {'class': 'btn btn-primary'}}) }}
                        <a href="{{ path('mgn_admin_core_parameters_users') }}" class="btn btn-default">Annuler les modifications</a>

                    </div>

                </div>

            </footer>

        </section>

        {{ form_rest(form) }}

    {{ form_end(form) }}

{% endblock %}
