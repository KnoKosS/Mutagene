                        {{ form_label(form.profileFirstName, "Prénom", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                        {{ form_errors(form.profileFirstName) }}
                        <div class="col-md-8">
                            <div class="switch switch-sm switch-primary">
                                {{ form_widget(form.profileFirstName, {'attr': {'class': 'form-control', 'data-plugin-ios-switch' : 'data-plugin-ios-switch'}}) }}
                            </div>
                        </div>

                    </div>

